{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_short_name__",
  "description": "__MSG_extension_description__",
  "version": "0.0.1",
  "author": "Sleezzi",
  "icons": {
    "16": "/img/logo/logo16.png",
    "32": "/img/logo/logo32.png",
    "48": "/img/logo/logo48.png",
    "128": "/img/logo/logo128.png"
  },
  "background": {
    "service_worker": "/js/background.js",
    "persitent": false
  },
  "permissions": [
    "background",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.sleezzi.github.io/*",
    "*://*.ytimg.com/*",
    "*://*.youtube.com/*"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {},
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["/js/content.js"],
      "css": ["/css/content.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.youtube.com/"],
      "js": ["/js/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["/js/video.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.youtube.com/@*", "https://*.youtube.com/channel/*"],
      "js": ["/js/channel.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.youtube.com/@sleezzi/bookmark*",
        "https://*.youtube.com/@Sleezzi/bookmark*",
        "https://*.youtube.com/@sleezzi/Bookmark*",
        "https://*.youtube.com/@Sleezzi/Bookmark*"
      ],
      "js": ["/js/bookmark_page.js"],
      "run_at": "document_end"
    }
  ]
}